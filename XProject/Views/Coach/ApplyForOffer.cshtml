@model RequestOfferToTrainee
@{
    ViewData["Title"] = "ApplyForOffer";
}

<form method="post" asp-controller="Coach" asp-action="ApplyForOffer">
    <section class="section-myProfile">
        <div class="row">
            <div class="col-md-4">
                <partial name="~/Views/Shared/_RightMenuCoachPartial.cshtml" />
            </div> <!-- col-md-3 -->

            <input type="hidden" asp-for="nationalId_User" value="@ViewBag.NIDUser" />
            <input type="hidden" asp-for="nationalId_Coash" value="@ViewBag.NIDCoach" />
            <input type="hidden" asp-for="Id_Offer_request" value="@ViewBag.Id_Offer_request" />

            <div class="col-md-8">
                <div class="header-detils m-2">
                    <h5> تقديم عرض </h5> <br />
                    <label>  اسم المشروع </label>
                    <h4> @ViewBag.NameOffier </h4>

                </div>
                <br /><br />  <br /><br />
                <div class="form-group m-2">
                    <label> المبلغ </label>
                    <input type="number" asp-for="Price" class="form-control" />
                </div>

                <div class="form-group">
                    <label> نبذة </label>
                    <textarea asp-for="text" class="form-control">

                </textarea>
                </div>

                <div class="form-group">
                    <input type="submit" value=" تقديم" class="btn btn-color coolor-White" />
                </div>
            </div> <!-- col-md-9 -->

        </div> <!-- row -->
    </section>
</form>