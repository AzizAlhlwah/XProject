@model ApplactionUsers
@{ ViewData["Title"] = "MyProfile"; }

@foreach (var item in @ViewBag.InfoCoach)
{
<section class="section-myProfile">
    <div class="row">

        <div class="col-md-4">
            <partial name="~/Views/Shared/_RightMenuCoachPartial.cshtml" />
        </div>

        <div class="col-md-8">

            <div class="form-group">
                <label> رقم الهوية</label>
                <input readonly value="@item.nationalId" class="form-control" />
            </div>

            <div class="form-group">
                <label> الاســم </label>
                <input asp-for="Name" class="form-control" />
            </div>

            <div class="form-group">
                <label> رقم الهوية</label>
                <input value="@item.Email" class="form-control" />
            </div>

            <div class="form-group">
                <label>  الساعات </label>
                <select asp-for="Hours" class="form-control">
                    <option value="1">1</option>
                    <option value="2">2</option>
                    <option value="3">3</option>
                    <option value="4">4</option>
                    <option value="5">5</option>
                    <option value="6">6</option>
                </select>
            </div>
            <br />
            <div class="form-group">
                <div class="box-days">
                    <label> الايام المناسبة لك </label>
                    <ul>
                        <li>
                            <input type="checkbox" />  السبت
                        </li>

                        <li>
                            <input type="checkbox" />  الأحد
                        </li>

                        <li>
                            <input type="checkbox" />  الأثنين
                        </li>

                        <li>
                            <input type="checkbox" />  الثلاثاء
                        </li>

                        <li>
                            <input type="checkbox" />  الأربعاء
                        </li>

                        <li>
                            <input type="checkbox" />  الخميس
                        </li>

                        <li>
                            <input type="checkbox" />  الجمعة
                        </li>
                    </ul>
                </div>
            </div>

            <br /> <br />

            <div class="form-group">
                <input type="submit" value=" حفــظ" class="btn btn-color coolor-White" />
            </div>
        </div>
    </div>
</section>
}